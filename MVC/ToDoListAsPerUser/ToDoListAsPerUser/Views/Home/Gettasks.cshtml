
@model List<ToDoListAsPerUser.Models.Task>
@{
    ViewBag.Title = "Gettasks";
}

<h2>Tasks</h2>
<hr />
<p class="btn btn-success text-white">@Html.ActionLink("Add Task", "insert", new { id =ViewBag.userid})</p>
<br />
<br />
<div  class="jumbotron wwww">
    <div class="container">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date</th>

                <th>Actions</th>
            </tr>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.id</td>
                    <td>@Html.Raw(i.name)</td>
                    <td>@i.date</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = i.id })|
                        @Html.ActionLink("Delete", "Delete", new { id = i.id })|
                        @Html.ActionLink("SubTask", "getsubtask", new { id = i.id })|
                      
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
