
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <table class="table table-dark table-striped">
            <tr>
            <th>First-name</th>
            <th>Last-name</th>
            <th>PhoneNo</th>
            <th>Address</th>
            <th>Actions</th>
            </tr>
            @foreach (var i in @ViewBag.contacts)
            {
                <tr>
                <td>@i.fname</td>
                <td>@Html.Raw(@i.lname)</td>
                <td>@i.phoneno</td>
                <td>@i.address</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { fname = i.fname })|
                    @Html.ActionLink("Delete","Delete",new { fname=i.fname})
                </td>
                </tr>


            }
        </table>
    </div>
</body>
</html>
